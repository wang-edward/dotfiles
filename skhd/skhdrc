                        # sketchybar --trigger window_focus

# fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# float
# alt - e : yabai -m space --layout bsp  # i only use float now
# alt - s : yabai -m space --layout stack
alt + shift - space : yabai -m space --layout float
